<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:alignment="vertical_center"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:width="match_parent">

    <Button
        ohos:background_element="$graphic:color_cyan_element"
        ohos:height="match_content"
        ohos:id="$+id:id_bt1"
        ohos:layout_alignment="center"
        ohos:padding="20px"
        ohos:text="Button 1"
        ohos:text_size="20fp"
        ohos:top_margin="100px"
        ohos:width="match_content"/>

    <Button
        ohos:background_element="$graphic:color_cyan_element"
        ohos:bottom_margin="3vp"
        ohos:height="match_content"
        ohos:id="$+id:id_bt2"
        ohos:layout_alignment="center"
        ohos:padding="20px"
        ohos:text="Button 2"
        ohos:text_size="20fp"
        ohos:top_margin="30px"
        ohos:width="match_content"/>

    <Button
        ohos:background_element="$graphic:color_cyan_element"
        ohos:bottom_margin="3vp"
        ohos:height="match_content"
        ohos:id="$+id:id_bt3"
        ohos:layout_alignment="center"
        ohos:padding="20px"
        ohos:text="Button 3"
        ohos:text_size="20fp"
        ohos:top_margin="30px"
        ohos:width="match_content"/>
</DirectionalLayout>